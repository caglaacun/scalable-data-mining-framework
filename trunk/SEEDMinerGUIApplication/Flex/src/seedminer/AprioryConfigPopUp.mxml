<?xml version="1.0" encoding="utf-8"?>
<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml" 
    title="Apriory Algorithm Configuration Parameters" show="{setRememberedValues(event)}" x="168" y="86" width="560" height="98"  modalTransparency=".5" modalTransparencyBlur="4" modalTransparencyColor="#E8E8E8" modalTransparencyDuration="200" showCloseButton="true" alpha="0.3" close="ok(event);" rollOverEffect="{fadeIn}" rollOutEffect="{fadeOut}">

    <mx:Script>
        <![CDATA[
    	import mx.controls.Alert;       
        import flash.net.FileReference;
        import mx.collections.ArrayCollection;
             
        private var support_SelectedItem:int;
        private var confidence_SelectedItem:int;
        
        private function setRememberedValues(event:Event):void
        {
        	support_combo.selectedIndex=support_SelectedItem;
        	confidence_combo.selectedIndex=confidence_SelectedItem;
        }
        
        private function alert(ss):void
        {
        	Alert.show(ss);
        }

        [Bindable]
        public var stepping:ArrayCollection =new ArrayCollection(               
        [{label:"0.1", data:0.1},
        {label:"0.2", data:0.2},
        {label:"0.3", data:0.3},
        {label:"0.4", data:0.4},
        {label:"0.5", data:0.5},
        {label:"0.6", data:0.6},
        {label:"0.7", data:0.7},
        {label:"0.8", data:0.8},
        {label:"0.9", data:0.9},
        {label:"1", data:1}]);
        //public var stepping:ArrayCollection = new ArrayCollection(
         //   [{label:"0.1"},{label:"0.2"},{label:"0.3"},{label:"0.4"},{label:"0.5"},{label:"0.6"},{label:"0.7"},{label:"0.8"},{label:"0.9"},{label:"1"}]);
              
        import mx.managers.PopUpManager;
       		   
        // Event handler for the OK button.
        private function ok(event:Event):void 
        {
        	//trace(location.text);
        	PopUpManager.removePopUp(this);
        }

        ]]>
    </mx:Script>
    <mx:VBox height="100%" width="100%" horizontalAlign="right">
        <mx:HBox width="100%" horizontalAlign="right">
            <mx:Label text="support" textAlign="right"/>
            <mx:ComboBox id="support_combo" width="65" dataProvider="{stepping}" close="support_SelectedItem=ComboBox(event.target).selectedIndex"></mx:ComboBox>
            <mx:Label text="confidence" textAlign="right"/>
            <mx:ComboBox id="confidence_combo" width="65" dataProvider="{stepping}" close="confidence_SelectedItem=ComboBox(event.target).selectedIndex"></mx:ComboBox>
            <mx:Label text="number of rules" textAlign="right"/>
            <mx:TextInput id="number_of_rules_input" width="130" text="10"/>
        </mx:HBox>
        <mx:Button id="okbutton" label="Ok" click="ok(event);" width="43" height="18" fontSize="10"/>
    </mx:VBox>
    
    <mx:Fade id="fadeOut" duration="1000" alphaFrom="1" alphaTo="0.3"/>
    <mx:Fade id="fadeIn" duration="500" alphaFrom="0.3" alphaTo="1"/>

</mx:TitleWindow>  